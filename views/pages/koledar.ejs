<div class="text-container mdl-grid">
    <div class="mdl-cell mdl-cell--1-col mdl-cell--hide-tablet mdl-cell--hide-phone"></div>
    <div  class="mdl-cell mdl-cell--10-col">
        <div class="mdl-card mdl-shadow--2dp mdl-card-naloge text-main">
            <div class="mdl-card__title mdl-color--blue-400">
                <h2 class="mdl-card__title-text mdl-color-text--white">Koledar</h2>
                <div class="mdl-card__actions">
                    <button id="dodajnalogo" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored align-right">
                        DODAJ NOVO NALOGO
                        <i class="material-icons">add</i>
                    </button>
                </div>
            </div>
            <div class="mdl-card__supporting-text padding-zero">
                <div class="monthly" id="mycalendar"></div>
            </div>
        </div>
    </div>
</div>
<script src="/scripts/jquery.js"></script>
<script src="/scripts/monthly.js"></script>
<script type="text/javascript">
    $(window).load( function() {
        $('#mycalendar').monthly({
            mode: 'event',
            dataType: 'json',
            jsonUrl: '/data/events.json'
        });
        switch(window.location.protocol) {
            case 'http:':
            case 'https:':
                // running on a server, should be good.
                break;
            case 'file:':
                alert('Just a heads-up, events will not work when run locally.');
        }
    });
</script>