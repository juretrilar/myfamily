<div class="mdl-card mdl-shadow--2dp overflow-visible naloge-okno">
    <button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab color-dark closeDialog" onclick="zapriNalogo()">
        <i class="material-icons mdl-color-text--white" role="presentation">close</i>
        <span class="visuallyhidden">add</span>
    </button>
    <div class="mdl-card__title <%= shortId(naloge[0].kategorija) %> padding-10 krivulja-2">
        <div class="naloge-title_type">
            <div class="mdl-card__subtitle-text mdl-color-text--black"><%= kategorija %></div>
            <div class="mdl-card__title-text mdl-color-text--white" style="display: block;">
                <span class="shadow-text"><%= naloge[0].ime %></span>
                <span class="mdl-chip mdl-color--white mdl-color-text--black mdl-chip-naloge mdl-chip-small">
                    <span class="mdl-chip__text">+<%= naloge[0].xp %> točk</span>
                </span>
            </div>
        </div>
    </div>
    <div class="mdl-card__supporting-text padding-zero overflow-visible">
        <p class="mdl-card__supporting-text mdl-color-text--grey padding-10lr padding-top-16 margin-zero">Opis:</p>            
        <p class="mdl-color-text--grey-700 mdl-typography--subhead margin-zero padding-10lr"><%= naloge[0].opis %></p>
        <p class="mdl-card__supporting-text mdl-color-text--grey padding-10lr padding-top-16 margin-zero">Cilj:</p>            
        <p class="mdl-color-text--grey-700 mdl-typography--subhead margin-zero padding-10lr"><%= naloge[0].cilj %></p>
        <div class="mdl-list__item mdl-list__item--three-line clani-naloge--container">
            <span class="mdl-list__item-primary-content">
                <span class="mdl-card__supporting-text mdl-color-text--grey padding-zero">Udeleženci naloge:</span>
                <span class="mdl-list__item-text-body chip-no-margin">
                    <% for(let i=1;i< vezani.length;i++) { %>
                    <img title="<%= vezani[i].ime %>" class="mdl-chip__contact author-chip" src="<%= vezani[i].slika %>"></img>
                    <% } %>
                </span>
            </span>
            <span class="mdl-list__item-primary-content">
                <span class="mdl-card__supporting-text mdl-color-text--grey padding-zero">Avtor:</span>
                <span class="mdl-list__item-text-body">
                    <img title="<%= vezani[0].ime %>" class="mdl-chip__contact author-chip" src="<%= vezani[0].slika %>"></img>
                </span>
            </span>
        </div>
        <ul class="'mdl-list padding-zero margin-zero">
            <li class="mdl-list__item padding-10">
                <% if (naloge[0].zacetek) { %><img class="mdl-icon-toggle__label" src="public/images/event_launch_24px.svg" title="Začetek"><span class="mdl-color-text--grey-700 mdl-typography--subhead padding-10 dateNaloga"><%= moment(naloge[0].zacetek).format('DD. MM. YYYY') +" "+ moment(naloge[0].zacetek).format('HH:mm')  %></span><% } %>
                <% if (naloge[0].konec) { %><img class="mdl-icon-toggle__label" src="public/images/event_finish_24px.svg" title="Konec"><span class="mdl-color-text--grey-700 mdl-typography--subhead padding-10 dateNaloga"><%= moment(naloge[0].konec).format('DD. MM. YYYY') +" "+ moment(naloge[0].konec).format('HH:mm')  %></span><% } %>
                <% if (!naloge[0].zacetek && !naloge[0].konec) { %><span class="mdl-color-text--grey-700 mdl-typography--subhead padding-10">Datum za to nalogo ni definiran.</span><% } %>
            </li>
        </ul>
    </div>
    <div class="mdl-card__supporting-text mdl-color-text--grey padding-10">
        Status naloge:
        <% if (naloge[0].status) { %><span name="status" class="mdl-color-text--grey-700 mdl-typography--subhead">Opravljena</span>
        <% } else { %><span name="status" class="mdl-color-text--grey-700 mdl-typography--subhead">Neopravljena</span><% } %>
    </div>
</div>
