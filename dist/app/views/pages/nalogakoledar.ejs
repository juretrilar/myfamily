<div class="mdl-card mdl-shadow--2dp overflow-visible naloge-okno">
    <button class="mdl-button mdl-js-ripple-effect mdl-js-button mdl-button--fab color-dark closeDialog" onclick="zapriNalogo()">
        <i class="material-icons mdl-color-text--white" role="presentation">close</i>
        <span class="visuallyhidden">add</span>
    </button>
    <div class="mdl-card__title <%= shortId(naloge[0].kategorija) %> padding-10 krivulja-2">
        <div class="naloge-title_type">
            <div class="mdl-card__subtitle-text mdl-color-text--black"><%= kategorija %></div>
            <div class="mdl-card__title-text mdl-color-text--white" style="display: block;">Skupni cilji družine
                <span class="mdl-chip mdl-color--white mdl-color-text--black mdl-chip-naloge mdl-chip-small">
                    <span class="mdl-chip__text">+<%= naloge[0].xp %> xp</span>
                </span>
            </div>
        </div>
    </div>
    <div class="mdl-card__supporting-text padding-zero overflow-visible">
        <div class="mdl-list__item mdl-list__item--three-line ime-opis-naloge--container">
            <span class="mdl-list__item-primary-content">
                <span class="mdl-color-text--black"><%= naloge[0].ime %></span>
                <span class="mdl-list__item-text-body mdl-color-text--grey"><%= naloge[0].opis %></span>
            </span>
        </div>
        <div class="mdl-list__item mdl-list__item--three-line clani-naloge--container">
            <span class="mdl-list__item-primary-content">
                <span class="mdl-color-text--grey">Udeleženci naloge:</span>
                <span class="mdl-list__item-text-body chip-no-margin">
                    <% for(let i=1;i< vezani.length;i++) { %>
                    <img title="<%= vezani[i].ime %>" class="mdl-chip__contact author-chip" src="<%= vezani[i].slika %>"></img>
                    <% } %>
                </span>
            </span>
            <span class="mdl-list__item-primary-content">
                <span class="mdl-color-text--grey">Avtor:</span>
                <span class="mdl-list__item-text-body">
                    <img title="<%= vezani[0].ime %>" class="mdl-chip__contact author-chip" src="<%= vezani[0].slika %>"></img>
                </span>
            </span>
        </div>
        <i class="material-icons" style="padding-left: 10px;vertical-align: middle">event</i>
        <% if (naloge[0].zacetek) { %><span class="mdl-list__item-sub-title mdl-color-text--grey">Od <%= moment(naloge[0].zacetek).format( 'DD-MMM-YYYY') %> 12:00</span><% } %>
        <% if (naloge[0].konec) { %><span class="mdl-list__item-sub-title mdl-color-text--grey">do <%= moment(naloge[0].konec).format( 'DD-MMM-YYYY') %> 18:00</span><% } %>
        <% if (!naloge[0].zacetek && !naloge.konec) { %><span class="mdl-list__item-sub-title mdl-color-text--grey">Datum za to nalogo ni definiran.</span><% } %>
    </div>
    <div class="mdl-card__supporting-text mdl-list__item-sub-title mdl-color-text--grey">
        Status naloge:
        <% if (naloge[0].status) { %><span name="status" class="mdl-list__item-sub-title mdl-color-text--grey">Opravljena</span>
        <% } else { %><span name="status" class="mdl-list__item-sub-title mdl-color-text--grey">Neopravljena</span><% } %>
    </div>
</div>
