<header class="mdl-grid mdl-layout__header mdl-layout__header--scroll mdl-color--white">
    <div class="mdl-layout__header-row">
        <!--<div class="circle-container mdl-color--primary mdl-cell--hide-phone"></div>-->
        <h3 class="mdl-color-text--grey mdl-typography--font-light">My</h3>
        <h3 class="mdl-color-text--black mdl-typography--font-light">Family</h3>
        <% if (currSession) { %>
        <div class="mdl-layout-spacer"></div>
        <h6 class="mdl-color-text--grey mdl-typography--font-light mdl-cell--hide-phone">Živjo,&nbsp</h6>
        <h6 class="mdl-color-text--black mdl-typography--font-light"><%= currSession.trenutniUporabnik.ime %></h6>
        <input type="hidden" id="trenutniUporabnik" value="<%= currSession.trenutniUporabnik.id %>">
        <button id="menu-lower-right"
                class="mdl-button mdl-js-button mdl-button--icon mdl-button--primary">
            <i class="material-icons">more_vert</i>
        </button>
        <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
            for="menu-lower-right">
            <li onclick="openSettings()" class="mdl-menu__item"><i class="material-icons">settings</i>Uporabniške nastavitve</li>
            <li onclick="openNotifications()" class="mdl-menu__item"><i class="material-icons">notifications</i>Nastavitve sporočanja</li>
            <li onclick="openDruzina()" class="mdl-menu__item"><i class="material-icons">add_circle</i>Dodaj družinskega člana</li>
            <li onclick="location.href='/odjava'" class="mdl-menu__item"><i class="material-icons">exit_to_app</i>Odjava</li>
        </ul>
        <% } %>
    </div>
    <%if (currSession) { %>
    <div class="mdl-layout__tab-bar mdl-js-ripple-effect mdl-color--white">
        <a id="menuDashboard" href="#dashboard" class="mdl-layout__tab mdl-color-text--grey <% if(tab == 0) { %> is-active <% } %>">Dashboard</a>
        <a id="menuKoledar" href="#koledar" class="mdl-layout__tab mdl-color-text--grey <% if(tab == 1) { %> is-active <% } %>">Koledar</a>
        <a id="menuNaloge" href="#naloge" class="mdl-layout__tab mdl-color-text--grey <% if(tab == 2) { %> is-active <% } %>">Naloge</a>
        <a id="menuCilj" href="#cilj" class="mdl-layout__tab mdl-color-text--grey <% if(tab == 3) { %> is-active <% } %>">Cilji</a>
        <a href="#settings"></a>
        <a href="#notifications"></a>
        <a href="#druzina"></a>
    </div>
    <% } %>
    <div class="mdl-layout__header-row"></div>
</header>